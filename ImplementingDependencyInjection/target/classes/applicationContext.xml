<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dept" class="org.example.model.Department">
        <property name="id" value="501"/>
        <property name="name" value="Technology"/>
    </bean>

    <bean id="employee" class="org.example.model.Employee">
        <property name="id" value="101"/>
        <property name="name" value="Arun R"/>
        <property name="department" ref="dept"/>
    </bean>

</beans>
